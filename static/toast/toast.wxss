.toast-out {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  display: flex;            
}
.toast-out .toast-in {
  min-width: 100px;
  padding: 6px;
  text-align: center;
  color: white;
  border-radius: 8px;
}
.toast-out .toast-in span {
  font-size: 30px;
}
.toast-out .toast-in .toast-txt {
  margin-top: 350rpx;
  padding: 57rpx;
  padding-top: 50rpx;
  background: rgba(0, 0, 0, 0.7);
  font-size: 28rpx;
  width: 372rpx;  
	height: 140rpx;
  box-shadow: 0.9px 2.9px 9px 1px 
	rgba(0, 0, 0, 0.17);
	border-radius: 10px;
  display: flex;
  flex-direction: column;
}

.tv_msg{
  width: 100%;
  height: 50%;
  font-size: 28rpx;
}