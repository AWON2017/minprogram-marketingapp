page{
  height: 100%;
  background-color: #f5f5f5;
}

.root_view{
  background-color: #ffffff;
  margin-top: 20rpx;
  
}

.content_view{
  background-color: #ffffff;
  padding-top: 35rpx; 
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 693rpx;
  display: flex;
  flex-direction: column;
}

.year_title{
  width: 107rpx;
	height: 32rpx;
	font-family: ArialMT;
	font-size: 34rpx;
	color: #4b77e5;
}

.year_details__item_view{
  display: flex;
  flex-direction: row;
  position: relative;
  margin-top: 35rpx;
  margin-bottom: 35rpx;
}
.year_details_view{
  display: flex;
  flex-direction: column;
  position: relative;
}
.tv_date{
  width:100%;
	height: 25rpx;
	font-family: ArialMT;
	font-size: 34rpx;
	color: #575757;
  position: absolute;
  z-index: 1;
  text-align: left;
}

.tv_doller{
  text-align: right;
  position: absolute;
  z-index: 2;
  width: 100%;
	height: 25rpx;
	font-size: 34rpx;
	color: #575757;
}

.border_thin_lin{
  background-color: #f5f5f5;
  width: 100%;
  height: 2.8rpx;
  margin-top: 35rpx;
}